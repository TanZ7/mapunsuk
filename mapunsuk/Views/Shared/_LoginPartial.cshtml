@using Microsoft.AspNetCore.Identity
@using mapunsuk.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="nav-buttons">
    @if (SignInManager.IsSignedIn(User))
    {
        <a class="nav-btn btn-add-activity" asp-controller="Post" asp-action="Create">เพิ่มกิจกรรมจิตอาสา</a>
        <a class="nav-user-greeting" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">สวัสดี @User.Identity?.Name!</a>
        <form class="logout-form" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" >
            <button  type="submit" class="nav-btn btn-login-custom">ออกจากระบบ</button>
        </form>
    }
    else
    {
        <a class="nav-btn btn-register-volunteer" asp-area="Identity" asp-page="/Account/Register">สมัครสมาชิกเป็นอาสา</a>
        <a class="nav-btn btn-login-custom" asp-area="Identity" asp-page="/Account/Login">เข้าสู่ระบบ</a>
    }
</div>
@model ManageProfileViewModel
@{
    ViewData["Title"] = "แก้ไขข้อมูลส่วนตัว";
}

<div class="profile-container">
    <div class="profile-card">
        <div class="profile-header">
            <div class="profile-avatar-wrapper">
                <div class="profile-avatar">
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
                </div>
                <button class="edit-avatar-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg>
                </button>
            </div>
            <h3 class="profile-title">@ViewData["Title"]</h3>
        </div>

        <form asp-action="ManageProfile" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="name-group">
                <div class="form-group">
                    <input asp-for="FirstName" class="form-control" placeholder="ชื่อ" />
                </div>
                <div class="form-group">
                    <input asp-for="LastName" class="form-control" placeholder="นามสกุล" />
                </div>
            </div>

            <div class="form-group">
                <label class="gender-label">เพศ :</label>
                <div class="radio-group">
                    <label class="radio-label">
                        <input type="radio" asp-for="Gender" value="ชาย" /> ชาย
                    </label>
                    <label class="radio-label">
                        <input type="radio" asp-for="Gender" value="หญิง" /> หญิง
                    </label>
                </div>
            </div>

            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="อีเมล" disabled />
            </div>

            <div class="form-group">
                <input type="password" class="form-control" value="pleng123" disabled placeholder="รหัสผ่าน" />
            </div>

            <div class="form-group">
                <input asp-for="PhoneNumber" class="form-control" placeholder="เบอร์โทรศัพท์" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            @if (ViewData["StatusMessage"] != null)
            {
                <div class="status-message" role="alert">
                    @ViewData["StatusMessage"]
                </div>
            }

            <button type="submit" class="form-submit-btn">บันทึกการแก้ไข</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@page
@model RegisterModel
@{
    ViewData["Title"] = "สมัครสมาชิก";
}

<div class="form-container">
    <div class="form-card">
        <h1 class="form-title">สมัครสมาชิกเป็นจิตอาสา</h1>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" placeholder="ชื่อ" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" placeholder="นามสกุล" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Gender"></label>
                <div class="radio-group">
                    <label class="radio-label">
                        <input type="radio" asp-for="Input.Gender" value="ชาย" /> ชาย
                    </label>
                    <label class="radio-label">
                        <input type="radio" asp-for="Input.Gender" value="หญิง" /> หญิง
                    </label>
                </div>
                <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="อีเมล" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="รหัสผ่าน" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="ยืนยันรหัสผ่าน" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="เบอร์ดทรติดต่อ" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="form-submit-btn">สมัครสมาชิก</button>
        </form>
        <div class="form-link">
            <p>
                เป็นสมาชิกอยู่แล้ว? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">เข้าสู่ระบบ</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
